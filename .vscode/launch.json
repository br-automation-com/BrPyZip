            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "args": [
                "C:\\Temp\\mappViewSample1",
                "--headless",
                "--separate_update_files=True"
            ],
            "justMyCode": true
        }
    ]
